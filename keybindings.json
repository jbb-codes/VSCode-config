// VSCode Keybindings
[
  // Live Server: Go Online in editor
  {
    "key": "cmd+o",
    "command": "extension.liveServer.goOnline",
    "when": "editorTextFocus"
  },
  // Toggle Auxiliary Bar (secondary sidebar)
  {
    "key": "cmd+l",
    "command": "workbench.action.toggleAuxiliaryBar"
  },
  // Toggle Sidebar (primary sidebar)
  {
    "key": "cmd+h",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  // Emmet: Wrap with Abbreviation
  {
    "key": "shift+cmd+a",
    "command": "editor.emmet.action.wrapWithAbbreviation"
  },
  // Emmet: Remove Tag
  {
    "key": "cmd+k",
    "command": "editor.emmet.action.removeTag"
  },
  // Toggle Terminal (works both when terminal is active or focused)
  {
    "key": "cmd+j",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active || terminalFocus"
  },
  // Close Explorer and focus editor (multi-command)
  {
    "key": "space e",
    "command": "multiCommand.closeExplorerAndFocusEditor",
    "when": "explorerViewletVisible && !inputFocus"
  },
  // Close Auxiliary Bar and focus editor (multi-command)
  {
    "key": "space a",
    "command": "multiCommand.closeAuxBarAndFocusEditor",
    "when": "auxiliaryBarVisible && !inputFocus"
  },
  // Open file and close Explorer when Enter is pressed on a file
  {
    "key": "enter",
    "command": "multiCommand.openFileAndCloseExplorer",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  // Open file in vertical split when | is pressed on a file in Explorer
  {
    "key": "shift+\\",
    "command": "multiCommand.openFileInVerticalSplit",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  // Open file in horizontal split when - is pressed on a file in Explorer
  {
    "key": "-",
    "command": "multiCommand.openFileInHorizontalSplit",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  // Navigate DOWN in explorer file list when j is pressed
  {
    "key": "j",
    "command": "list.focusDown",
    "when": "inQuickOpen && listFocus"
  },
  // Navigate UP in explorer file list when k is pressed
  {
    "key": "k",
    "command": "list.focusUp",
    "when": "inQuickOpen && listFocus"
  },
  // Move focus UP to Open Editors section when space+k is pressed in Explorer file tree
  {
    "key": "space k",
    "command": "workbench.files.action.focusOpenEditorsView",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  // Move focus DOWN to project files/file tree when space+j is pressed in Explorer
  {
    "key": "space j",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "explorerViewletVisible && !inputFocus"
  }
]
